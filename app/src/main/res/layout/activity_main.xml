<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding ="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_above="@id/poolcards"
        android:text="Pool"
        android:layout_marginBottom="-30dp"/>

    <LinearLayout
        android:id="@+id/poolcards"
        android:layout_width="wrap_content"
        android:layout_height="138dp"
        android:orientation="horizontal"
        android:layout_below="@id/playerMoney"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/poolcard_1"
            android:layout_width="72dp"
            android:layout_height="136dp"
            android:layout_weight="1"
            android:src="@drawable/red_joker"/>

        <ImageView
            android:id="@+id/poolcard_2"
            android:layout_width="72dp"
            android:layout_height="136dp"
            android:layout_weight="1"
            android:src="@drawable/red_joker"/>

        <ImageView
            android:id="@+id/poolcard_3"
            android:layout_width="72dp"
            android:layout_height="136dp"
            android:layout_weight="1"
            android:src="@drawable/red_joker"/>

        <ImageView
            android:id="@+id/poolcard_4"
            android:layout_width="72dp"
            android:layout_height="136dp"
            android:layout_weight="1"
            android:src="@drawable/red_joker"/>

        <ImageView
            android:id="@+id/poolcard_5"
            android:layout_width="72dp"
            android:layout_height="136dp"
            android:layout_weight="1"
            android:src="@drawable/red_joker"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp">


        <Button

            android:id="@+id/fold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fold"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/raise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Raise"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/stay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stay"
            style="?android:attr/buttonBarButtonStyle"/>

    </LinearLayout>


    <TextView
        android:id="@+id/playerMoney"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Your Money: 0"
        android:textSize="22sp"
        />
    <TextView
        android:id="@+id/potMoney"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Pot Money: 0"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:layout_toRightOf="@id/playerMoney"
        />

    <LinearLayout
        android:id="@+id/cardhand"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_above="@+id/buttons"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/card1"
            android:layout_width="150dp"
            android:layout_height="218dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/red_joker" />

        <ImageView
            android:id="@+id/card2"
            android:layout_width="150dp"
            android:layout_height="218dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/red_joker" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardhand2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@+id/cardhand"
        android:layout_above="@+id/buttons"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card3"
            android:layout_width="150dp"
            android:layout_height="218dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/red_joker" />

        <ImageView
            android:id="@+id/card4"
            android:layout_width="150dp"
            android:layout_height="218dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/red_joker" />

    </LinearLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="P1 Cards"
        android:textAlignment="center"
        android:layout_above="@id/cardhand"
        android:layout_marginBottom="-60dp"
        android:layout_alignLeft="@id/cardhand"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="P2 Cards"
        android:layout_above="@id/cardhand2"
        android:textAlignment="center"
        android:layout_alignRight="@id/cardhand2"
        android:layout_marginBottom="-60dp"
        />

    <Button
        android:id="@+id/play"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="play"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/winText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:text="YOU WIN"
        android:textSize="30dp"
        android:layout_above="@id/play"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/loseText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:text="YOU LOSE"
        android:textSize="30dp"
        android:layout_above="@id/play"
        android:layout_centerInParent="true"
        />




</RelativeLayout>